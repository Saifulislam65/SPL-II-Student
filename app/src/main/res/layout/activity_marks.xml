<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMarks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.4"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:text="Quiz 1"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/curved_background"/>

            <TextView
                android:id="@+id/marks_quiz1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Quiz 1 Marks"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.4"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:text="Quiz 2"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/curved_background"/>

            <TextView
                android:id="@+id/marks_quiz2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Quiz 2 Marks"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.4"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:text="Quiz 3"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/curved_background"/>

            <TextView
                android:id="@+id/marks_quiz3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Quiz 3 Marks"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.4"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:text="Quiz 4"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/curved_background"/>

            <TextView
                android:id="@+id/marks_quiz4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Quiz 4 Marks"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.4"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:text="Mid"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/curved_background"/>

            <TextView
                android:id="@+id/marks_mid"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Mid Marks"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.4"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:text="Final"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/curved_background"/>

            <TextView
                android:id="@+id/marks_final"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Final Marks"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>